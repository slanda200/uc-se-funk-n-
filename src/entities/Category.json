{
  "name": "Category",
  "type": "object",
  "properties": {
    "topic_id": {
      "type": "string",
      "description": "ID tématu (např. čeština – 3. třída)"
    },
    "name": {
      "type": "string",
      "description": "Název kategorie (např. 'Vyjmenovaná slova', 'Abeceda A–Z')"
    },
    "description": {
      "type": "string",
      "description": "Krátký popis kategorie"
    },
    "order": {
      "type": "number",
      "description": "Pořadí zobrazení v rámci sekce"
    },
    "section": {
      "type": "string",
      "description": "Sekce předmětu",
      "enum": [
        "grammar",
        "reading",
        "writing"
      ]
    }
  },
  "required": [
    "topic_id",
    "name"
  ]
}
